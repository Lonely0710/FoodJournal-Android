<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 食品卡片基础样式 -->
    <style name="FoodCard" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <!-- 食品卡片图片样式 -->
    <style name="FoodCard.Image" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- 食品卡片标题样式 -->
    <style name="FoodCard.Title" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 食品卡片信息图标样式 -->
    <style name="FoodCard.InfoIcon" parent="">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- 食品卡片信息文本样式 -->
    <style name="FoodCard.InfoText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <!-- 食品卡片评分文本样式 -->
    <style name="FoodCard.InfoText.Rating" parent="FoodCard.InfoText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF9800</item>
    </style>

    <!-- 食品卡片价格文本样式 -->
    <style name="FoodCard.InfoText.Price" parent="FoodCard.InfoText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4CAF50</item>
    </style>

    <!-- 食品卡片标签样式 -->
    <style name="FoodCard.Tag" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">13sp</item>
        <item name="chipBackgroundColor">#F0F0F0</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">26dp</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="android:textColor">#757575</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
    </style>
</resources> 