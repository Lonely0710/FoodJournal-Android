<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础样式 -->
    <style name="Widget.TastyLog" parent="Widget.MaterialComponents.Toolbar"/>

    <!-- Toolbar样式 -->
    <style name="Widget.TastyLog.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/orange_500</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- 卡片样式 -->
    <style name="Widget.TastyLog.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- 列表项样式 -->
    <style name="Widget.TastyLog.ListItem" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>
</resources> 