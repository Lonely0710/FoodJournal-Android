<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础样式 -->
    <style name="Widget.TastyLog" parent="Widget.MaterialComponents.Toolbar"/>

    <!-- Toolbar样式 -->
    <style name="Widget.TastyLog.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/orange_500</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- 卡片样式 -->
    <style name="Widget.TastyLog.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- 列表项样式 -->
    <style name="Widget.TastyLog.ListItem" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 其他主题属性 -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorAccent">@color/orange_500</item>
        <!-- 指示器样式 -->
        <item name="circularProgressIndicatorStyle">@style/OrangeProgressIndicator</item>
    </style>

    <style name="OrangeProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/orange_500</item>
    </style>

    <!-- 对话框样式 -->
    <style name="AlertDialog.AppTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.AppTheme.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.AppTheme.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.AppTheme.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.AppTheme.NegativeButton</item>
    </style>

    <style name="AlertDialog.AppTheme.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialog.AppTheme.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 确定按钮样式 -->
    <style name="AlertDialog.AppTheme.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red_500</item>
        <item name="rippleColor">@color/red_200</item>
    </style>

    <!-- 取消按钮样式 -->
    <style name="AlertDialog.AppTheme.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange_500</item>
        <item name="rippleColor">@color/orange_200</item>
    </style>
</resources> 