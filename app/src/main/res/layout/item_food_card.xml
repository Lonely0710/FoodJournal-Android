<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/FoodCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 图片区域 -->
        <ImageView
            android:id="@+id/iv_food"
            style="@style/FoodCard.Image"
            android:src="@drawable/placeholder_food"/>

        <!-- 内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 标题和评分行 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/FoodCard.Title"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/rating_layout"
                    android:text="山城火锅"/>

                <LinearLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/FoodCard.InfoIcon"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/ic_star"
                        app:tint="#FF9800"/>

                    <TextView
                        android:id="@+id/tv_rating"
                        style="@style/FoodCard.InfoText.Rating"
                        android:text="4.5"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- 日期和价格行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/FoodCard.InfoIcon"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#757575"/>

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/FoodCard.InfoText"
                    android:text="07-15 晚餐"/>

                <ImageView
                    style="@style/FoodCard.InfoIcon"
                    android:src="@drawable/ic_money"
                    app:tint="#4CAF50"/>

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/FoodCard.InfoText.Price"
                    android:text="¥98/人"/>
            </LinearLayout>

            <!-- 标签行 -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <!-- 动态添加标签 -->
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 