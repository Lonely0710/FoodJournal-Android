<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#FF9800" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="新建食记"
                    android:textColor="#FF9800"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp"/>

                <Button
                    android:id="@+id/btn_save"
                    style="@style/AddFood.Button"
                    android:text="完成"/>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 滚动内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 餐厅名称 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AddFood.TextInput"
                android:hint="店铺名称"
                app:startIconDrawable="@drawable/ic_store">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 用餐类型 -->
            <TextView
                style="@style/AddFood.Label"
                android:text="用餐类型"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_meal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早餐"
                    style="@style/AddFood.Chip"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="午餐"
                    style="@style/AddFood.Chip"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晚餐"
                    style="@style/AddFood.Chip"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_afternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下午茶"
                    style="@style/AddFood.Chip"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- 消费金额 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AddFood.TextInput"
                android:hint="消费金额"
                app:startIconDrawable="@drawable/ic_money_small"
                app:prefixText="¥">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 评分 -->
            <TextView
                style="@style/AddFood.Label"
                android:text="评分"/>

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AddFood.RatingBar"/>

            <!-- 照片区域 -->
            <TextView
                style="@style/AddFood.Label"
                android:text="添加照片"/>

            <FrameLayout
                android:id="@+id/layout_photo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_photo_upload"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_camera"
                        android:tint="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="上传美食照片"
                        android:textColor="#999999"
                        android:textSize="14sp"/>
                </LinearLayout>

            </FrameLayout>

            <!-- 标签 -->
            <TextView
                style="@style/AddFood.Label"
                android:text="标签"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    style="@style/AddFood.Chip"
                    android:text="#麻辣"/>

                <com.google.android.material.chip.Chip
                    style="@style/AddFood.Chip"
                    android:text="#清淡"/>

                <com.google.android.material.chip.Chip
                    style="@style/AddFood.Chip"
                    android:text="#家常菜"/>

                <com.google.android.material.chip.Chip
                    style="@style/AddFood.Chip"
                    android:text="#朋友聚餐"/>

                <com.google.android.material.chip.Chip
                    style="@style/AddFood.Chip"
                    android:text="#约会"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_add"
                    style="@style/AddFood.Chip.Add"
                    android:text="添加标签"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- 备注 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AddFood.TextInput"
                android:hint="备注">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 